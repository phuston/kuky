<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.keenan.kuky">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity
            android:name="com.mobproto.keenan.kuky.activities.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobproto.keenan.kuky.activities.KuViewActivity"
            android:icon="@drawable/ic_logo_clear"/>
        <activity
            android:name="com.mobproto.keenan.kuky.activities.DetailActivity"
            android:label="@string/title_activity_detail"
            android:icon="@drawable/ic_logo_clear"/>
        <activity
            android:name="com.mobproto.keenan.kuky.activities.KuWriteActivity"
            android:label="@string/title_activity_compose"
            android:icon="@drawable/ic_logo_clear"/>
    </application>

</manifest>
